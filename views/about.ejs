<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>About</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <link rel="stylesheet" href="/css/main.css">
    </head>

<body>

    <%- include('partials/header') %>

    <main class="about-container">
        <div class="about-content">
                <!-- Search & Filter Section with Cards -->
                <section class="search-container">
                    <h2 class="text-primary">Search & Filter</h2>

                    <div class="search-cards">
                        <!-- Search by Item ID -->
                        <div class="search-card">
                            <form action="/item" method="get">
                                <h5>Search by ID</h5>
                                <input type="number" id="itemId" name="id" class="form-control" placeholder="Enter Item ID" required>
                                <button type="submit" class="btn btn-primary w-100 mt-3">Search</button>
                            </form>
                        </div>

                        <!-- Filter by Date -->
                        <div class="search-card">
                            <form action="/items" method="get">
                                <h5>Filter by Date</h5>
                                <input type="date" id="minDate" name="minDate" class="form-control" required>
                                <button type="submit" class="btn btn-primary w-100 mt-3">Filter</button>
                            </form>
                        </div>

                        <!-- Filter by Category -->
                        <div class="search-card">
                            <form action="/items" method="get">
                                <h5>Filter by Category</h5>
                                <input type="text" id="category" name="category" class="form-control" placeholder="Enter Category" required>
                                <button type="submit" class="btn btn-primary w-100 mt-3">Filter</button>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>


    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
